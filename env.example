# Loomi Clothing Detection API Configuration - HF Optimized
# Copy this to .env and modify as needed

# API Settings
HOST=0.0.0.0
PORT=7860
WORKERS=1
RELOAD=false

# File Upload Settings
MAX_UPLOAD_MB=15
ALLOWED_CONTENT_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting (HF-optimized)
RATE_LIMIT_REQUESTS=15
RATE_LIMIT_WINDOW=60
MAX_CONCURRENT_REQUESTS=5

# Model Settings (HF-optimized)
MODEL_WARMUP_ON_STARTUP=true
MODEL_CACHE_SIZE=5

# Queue Settings (HF-optimized)
NUM_WORKERS=1
QUEUE_MAX_SIZE=25

# CORS Settings
ALLOWED_ORIGINS=*

# Security Settings
ENABLE_AUTH=false
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Token System Settings (Future)
ENABLE_TOKEN_SYSTEM=false
FREE_TIER_REQUESTS_PER_DAY=100
PREMIUM_TIER_REQUESTS_PER_DAY=1000

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Monitoring Settings
ENABLE_METRICS=false
METRICS_PORT=8000

# Cache Settings
ENABLE_REDIS=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Hugging Face Spaces Settings
SPACE_ID=your-username/your-space-name
HF_SPACE=true
HF_CACHE_DIR=/tmp/hf_cache
